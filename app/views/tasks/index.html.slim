          .col-lg-1.col-sm-2.col-2.week-day #{ week_days[n % 7]}
          .col-lg-1.col-sm-2.col-2.day #{n+1}
          .col-lg-19.col-sm-14.col-14.task-title Rendez-vous chez l'osth√©o
          .col-lg-1.col-sm-2.col-2
            = link_to "#" do
              span.icon-checked-circle
          .col-lg-1.col-sm-2.col-2
            = link_to "#" do
              span.icon-circle

          .col-lg-1.col-sm-2.col-2
            = link_to "#" do
              span.icon-circle

